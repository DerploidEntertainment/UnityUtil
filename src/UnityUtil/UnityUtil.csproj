<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>UnityEngine</RootNamespace>
  </PropertyGroup>

  <Target Name="CopyOutputs" AfterTargets="AfterBuild" Condition="'$(SolutionName)'=='UnityUtil'">
    <ItemGroup>
      <ProjectOutput Include="$(OutDir)/$(ProjectName).dll;$(OutDir)/$(ProjectName).pdb" />
    </ItemGroup>
    <Message Importance="high" Text="Moving $(ProjectName) outputs into appropriate subfolders of '$([System.IO.Path]::GetFullPath($(UnityAssetsDir)))'" />
    <Copy SourceFiles="%(ProjectOutput.Identity)" DestinationFolder="$(UnityAssetsDir)\UnityUtil\Plugins" />
  </Target>

</Project>
