<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RootNamespace>UnityEngine</RootNamespace>
    <UnityVersion>2019.1.6f1</UnityVersion>
    <OutputPath>../../$(SolutionName)/Assets/$(SolutionName)/Plugins</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Unity3D" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(UnityInstallRoot)\$(UnityVersion)\$(UnityEngineUiPath)" Private="false" />
    <Reference Include="..\..\$(SolutionName)\Assets\Plugins\Sirenix\Assemblies\Sirenix.OdinInspector.Attributes.dll" />
    <Reference Include="..\..\$(SolutionName)\Assets\Plugins\Sirenix\Assemblies\Sirenix.OdinInspector.Editor.dll" />
  </ItemGroup>

  <Target Name="DeleteUnnecessaryBuildOutputs" AfterTargets="AfterBuild">
    <ItemGroup Label="UnnecessaryBuildOutputs">
      <Unnecessary Include="$(OutDir)/Sirenix.*" />
      <Unnecessary Include="$(OutDir)/$(ProjectName).deps.json" />
    </ItemGroup>
    <Message Importance="high" Text="Clearing unnecessary build outputs from the Unity Assets/Tests/ folder" />
    <Delete Files="%(Unnecessary.Identity)" />
  </Target>

</Project>
