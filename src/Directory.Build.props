<Project>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <UnityVersion>2019.1.14f1</UnityVersion>

    <UnityUtilAssetsDir Condition="'$(SolutionName)'=='UnityUtil'">$(SolutionDir)\..\UnityUtil\Assets</UnityUtilAssetsDir>
    <UnityUtilAssetsDir Condition="'$(SolutionName)'!='UnityUtil'">$(SolutionDir)\..\..\UnityUtil\UnityUtil\Assets</UnityUtilAssetsDir>
    <UnityAssetsDir Condition="'$(SolutionName)'=='UnityUtil'">$(UnityUtilAssetsDir)</UnityAssetsDir>
    <UnityAssetsDir Condition="'$(SolutionName)'!='UnityUtil'">$(SolutionDir)\..\$(SolutionName)\Assets</UnityAssetsDir>
    <SirenixAssembliesDir>$(UnityAssetsDir)\Plugins\Sirenix\Assemblies</SirenixAssembliesDir>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Unity3D" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(SirenixAssembliesDir)\Sirenix.OdinInspector.Attributes.dll" Private="false"/>
    <Reference Include="$(UnityInstallRoot)\$(UnityVersion)\$(UnityEngineUIPath)" Private="false" />
  </ItemGroup>

</Project>
