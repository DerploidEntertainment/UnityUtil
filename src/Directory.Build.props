<Project>
  
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <UnityVersion>2021.2.2f1</UnityVersion>
    <DefineConstants Condition="'$(Configuration)'=='Debug'">UNITY_ASSERTIONS;UNITY_EDITOR</DefineConstants>

    <SirenixAssembliesRelativeDir>Assets\Plugins\Sirenix\Assemblies</SirenixAssembliesRelativeDir>
  </PropertyGroup>
  
  <Choose>
    <When Condition="'$(SolutionName)'=='UnityUtil'">
      <PropertyGroup>
        <UnityUtilProjectPath>$(SolutionDir)\..\UnityUtil</UnityUtilProjectPath>
        <UnityProjectPath>$(UnityUtilProjectPath)</UnityProjectPath>
        <SirenixAssembliesDir>$(UnityProjectPath)\$(SirenixAssembliesRelativeDir)</SirenixAssembliesDir>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <UnityUtilProjectPath>$(SolutionDir)\..\..\UnityUtil\UnityUtil</UnityUtilProjectPath>
        <UnityProjectPath>$(SolutionDir)\..\$(SolutionName)</UnityProjectPath>
        <SirenixAssembliesDir>$(UnityProjectPath)\$(SirenixAssembliesRelativeDir)</SirenixAssembliesDir>
        <SirenixAssembliesDir Condition="!Exists('$(SirenixAssembliesDir)')">$(UnityUtilProjectPath)\$(SirenixAssembliesRelativeDir)</SirenixAssembliesDir>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <ItemGroup Label="CLS compliance">
    <!-- Test assemblies will never be referenced by 3rd parties, so they don't need CLS-compliance -->
    <!--
    For our other game assemblies, we'll just mark them as entirely not CLS-compliant also. After all,
    the Unity assemblies are not CLS-compliant, so any type that inherits from one of their types (e.g., MonoBehaviour)
    or uses one of their types in a public API is also not CLS-compliant. We don't wanna play whack-a-mole to mark every new type/member
    with [CLSCompliant(false)] as necessary...
    -->
    <AssemblyAttribute Include="System.CLSCompliantAttribute">
      <_Parameter1 Condition="!$(MSBuildProjectName.Contains('Test'))">false</_Parameter1>
      <_Parameter1 Condition="$(MSBuildProjectName.Contains('Test'))">false</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup Label="Dependencies">
    <PackageReference Include="Unity3D" Version="1.7.0" />

    <Reference Include="$(SirenixAssembliesDir)\Sirenix.OdinInspector.Attributes.dll" Private="false"/>
    <Reference Include="$(UnityProjectPath)\$(UnityScriptAssembliesPath)\UnityEngine.UI.dll" Private="false" />
  </ItemGroup>

  <PropertyGroup Label="Code analysis">
    <EnableNETAnalyzers>true</EnableNETAnalyzers> <!-- Not required on .NET 5+ (https://docs.microsoft.com/en-us/dotnet/core/project-sdk/msbuild-props#enablenetanalyzers) -->
    <AnalysisMode>All</AnalysisMode>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>
  
</Project>
