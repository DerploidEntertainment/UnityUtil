<Project>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <UnityVersion>2019.4.3f1</UnityVersion>

    <UnityProjectPath Condition="'$(SolutionName)'=='UnityUtil'">$(SolutionDir)\..\UnityUtil</UnityProjectPath>
    <UnityProjectPath Condition="'$(SolutionName)'!='UnityUtil'">$(SolutionDir)\..\..\UnityUtil\UnityUtil</UnityProjectPath>
    <SirenixAssembliesDir>$(UnityProjectPath)\Assets\Plugins\Sirenix\Assemblies</SirenixAssembliesDir>

    <DefineConstants Condition="'$(Configuration)'=='Debug'">UNITY_ASSERTIONS;UNITY_EDITOR</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Unity3D" Version="1.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(SirenixAssembliesDir)\Sirenix.OdinInspector.Attributes.dll" Private="false"/>
    <Reference Include="$(UnityProjectPath)\$(UnityScriptAssembliesPath)\UnityEngine.UI.dll" Private="false" />
  </ItemGroup>
  
</Project>
